@model IEnumerable<News.MVC.Models.NewsViewModelV2>

@{
    ViewData["Title"] = "Index";
}

<h1>News</h1>
<br/>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New News</a>

</p>
@if(Model.Count() > 0 )
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Image)</td>
                <td>@Html.DisplayNameFor(E => E.Title)</td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var News in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-Id=@News.Id >
                        <img src="~/Files/images/@News.Image" class="img-fluid rounded" alt="News Image" height="130" width="130" />
                        </a>
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-Id=@News.Id >
                            @News.Title
                        </a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>There is No News !</h3>
    </div>
}
    